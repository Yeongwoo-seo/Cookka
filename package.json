{
  "name": "cookka",
  "version": "1.0.1",
  "description": "팀 협업형 도시락 비즈니스 관리 웹앱",
  "private": true,
  "scripts": {
    "dev": "next dev -p 3000",
    "dev:clean": "powershell -Command \"if (Test-Path .next) { Remove-Item -Recurse -Force .next }; next dev -p 3000\"",
    "fix": "powershell -Command \"$processes = netstat -ano | Select-String ':3000' | ForEach-Object { ($_ -split '\\s+')[-1] } | Select-Object -Unique; foreach ($procId in $processes) { if ($procId -match '^\\d+$') { taskkill /F /PID $procId 2>$null } }; if (Test-Path .next) { Remove-Item -Recurse -Force .next }; Write-Host '✅ 포트 3000 프로세스 종료 및 .next 캐시 삭제 완료'\"",
    "build": "next build",
    "start": "next start -p 3000",
    "lint": "next lint",
    "init-firebase": "tsx scripts/init-firebase.ts",
    "import-excel": "tsx scripts/import-excel.ts",
    "delete-recent-ingredients": "tsx scripts/delete-recent-ingredients.ts",
    "delete-today-ingredients": "tsx scripts/delete-recent-ingredients.ts -- --today",
    "delete-ingredient-prefix": "tsx scripts/delete-recent-ingredients.ts -- --ingredient-prefix",
    "rename-field": "tsx scripts/rename-field.ts",
    "set-main-product": "tsx scripts/set-main-product.ts"
  },
  "dependencies": {
    "date-fns": "^3.3.0",
    "firebase": "^12.8.0",
    "next": "^15.1.0",
    "react": "^18.3.0",
    "react-dom": "^18.3.0",
    "zustand": "^4.5.0"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "autoprefixer": "^10.4.0",
    "dotenv": "^16.4.0",
    "eslint": "^8.57.0",
    "eslint-config-next": "^14.2.0",
    "postcss": "^8.4.0",
    "tailwindcss": "^3.4.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.0",
    "xlsx": "^0.18.5"
  }
}
